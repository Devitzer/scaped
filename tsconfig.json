{
    "compilerOptions": {
        "target": "ES6",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "CommonJS",
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "skipDefaultLibCheck": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}